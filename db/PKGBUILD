pkgname=cmangos-tbc-db-git
_pkgbase=cmangos-tbc-db
pkgver=8077.c33f4aed
pkgrel=0
pkgdesc="Database for CMaNGOS 2.4.3 Server"
arch=(x86_64 i686 armv7h aarch64)
url="https://github.com/cmangos/tbc-db"
license=('GPL')
depends=(mariadb boost)
makedepends=(git)
provides=(cmangos-tbc-db)
_installdir="opt/$_pkgbase"
source=("$_pkgbase::git+https://github.com/cmangos/tbc-db.git")
sha256sums=('SKIP')

pkgver() {
  cd "$_pkgbase"
  printf "%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

package() {
  mkdir -p "$pkgdir/$_installdir"
  mv "$srcdir/$_pkgbase/"* "$pkgdir/$_installdir"
  _YELLOW='\033[0;33m'
  _NC='\033[0m'
  printf "\n${_YELLOW}CMaNGOS Database installed to /${_installdir}\n\n"
}
